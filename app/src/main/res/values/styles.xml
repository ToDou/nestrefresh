<resources>

    <style name="TabStyle">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_tab_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HorizontalItemStyle">
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:background">@drawable/shape_radius</item>
    </style>

</resources>
